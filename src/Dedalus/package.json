{
  "name": "dedalus-mcp-server",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dedalus-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p src/tsconfig.json && shx chmod +x dist/*.js",
    "watch": "tsc -p src/tsconfig.json --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "dev": "npm run build && node dist/index.js",
    "dev:stdio": "npm run build && node dist/index.js --stdio"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/ws": "^8.18.1",
    "dotenv": "^16.4.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "shx": "^0.3.4",
    "typescript": "^5.4.5"
  }
}
